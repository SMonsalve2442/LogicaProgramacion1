while True:
# Entrada de numeros
 num1 = float(input("ingresa el primer numero:"))
 num2 = float(input("ingresa el segundo numero:"))
 
 #Seleccion de operacion
 print("selecciona la operacion que deseas realizar:")
 print("1,suma")
 print("2,resta")
 print("3,multiplicacion")
 print("4,division")
 operacion = input("ingresa el numero de la operacion (1/2/3/4):")

#proceso de operacion 
 if operacion == '1':
   resultado = num1 + num2
   print ("el resultado de la suma es:", resultado)
 elif operacion == '2':
  resultado = num1 - num2
  print("El resultado de la resta es:", resultado)
 elif operacion == '3':
  resultado = num1 * num2
  print("El resultado de la multiplicacion es:", resultado)
 elif operacion == '4':
  if num2 != 0:
   resultado = num1 / num2
  print("El resultado de la division es:", resultado)
 else:
   print("error:no se puede dividir por 0")
 else:
   print("error: Operacion no valida por favor, selecciona una opcion correcta.")

# selectiva y repetitiva
 continuar = input("deeas realizar otra operacion? (s/n):")
 if continuar.lower() != 's' :
 break



